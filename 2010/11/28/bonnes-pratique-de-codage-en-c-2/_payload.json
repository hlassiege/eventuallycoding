s":199,"children":200},{"code":124},[201],{"type":28,"tag":127,"props":202,"children":203},{"__ignoreMap":7},[204],{"type":33,"value":124},{"type":28,"tag":29,"props":206,"children":207},{},[208],{"type":33,"value":135},{"type":28,"tag":29,"props":210,"children":211},{},[212],{"type":33,"value":213},"=> pour du code existant, le risque c'est que les appelants n'appellent pas cette méthode",{"type":28,"tag":182,"props":215,"children":217},{"id":216},"méthode-init-surchargeable",[218],{"type":33,"value":219},"méthode init surchargeable",{"type":28,"tag":29,"props":221,"children":222},{},[223],{"type":33,"value":224},"protected void Init ()\n{\nStreamReader monStreamReader = new StreamReader(\"francais.txt\");\nstring ligne = monStreamReader.ReadLine();",{"type":28,"tag":122,"props":226,"children":227},{"code":124},[228],{"type":28,"tag":127,"props":229,"children":230},{"__ignoreMap":7},[231],{"type":33,"value":124},{"type":28,"tag":29,"props":233,"children":234},{},[235],{"type":33,"value":135},{"type":28,"tag":29,"props":237,"children":238},{},[239],{"type":33,"value":240},"=> la méthode étant protected, on peut créer un objet DictionnaireTestable qui redéfinit la méthode Init",{"type":28,"tag":29,"props":242,"children":243},{},[244],{"type":33,"value":245},"public class DictionnaireTestable ()\n{\nprotected void Init ()\n{\n// Do nothing\n}\n}",{"type":28,"tag":29,"props":247,"children":248},{},[249],{"type":33,"value":250},"=> Obligé de créer une classe pour les tests",{"type":28,"tag":182,"props":252,"children":254},{"id":253},"constructeur-différent-pour-les-tests",[255],{"type":33,"value":256},"constructeur différent pour les tests",{"type":28,"tag":29,"props":258,"children":259},{},[260],{"type":33,"value":261},"public Dictionnaire (boolean ForTest)\n{\n// Do nothing\n}",{"type":28,"tag":65,"props":263,"children":264},{},[265,270],{"type":28,"tag":69,"props":266,"children":267},{},[268],{"type":33,"value":269},"risque de confusion avec le constructeur existant",{"type":28,"tag":69,"props":271,"children":272},{},[273],{"type":33,"value":274},"paramétre supplémentaire non utilisé",{"type":28,"tag":182,"props":276,"children":278},{"id":277},"solution-optimale",[279],{"type":33,"value":280},"Solution optimale",{"type":28,"tag":65,"props":282,"children":283},{},[284],{"type":28,"tag":69,"props":285,"children":286},{},[287],{"type":33,"value":288},"objets liés passés en paramètre",{"type":28,"tag":29,"props":290,"children":291},{},[292],{"type":33,"value":293},"public Dictionnaire ()\n{\n// ancien code\n...\n}",{"type":28,"tag":29,"props":295,"children":296},{},[297],{"type":33,"value":298},"public Dictionnaire (Dictionary definitions )\n{\nthis.definitions = definitions;\n}",{"type":28,"tag":29,"props":300,"children":301},{},[302],{"type":33,"value":303},"Les définitions sont initialisées dans une factory.",{"type":28,"tag":29,"props":305,"children":306},{},[307],{"type":33,"value":308},"public class DictionnaireFactory\n{\npublic static Dictionnaire buildFromTextFile ()\n{\nDictionary definitions = new Dictionnary();\nStreamReader monStreamReader = new StreamReader(\"francais.txt\");\nstring ligne = monStreamReader.ReadLine();",{"type":28,"tag":122,"props":310,"children":312},{"code":311},"    while (ligne != null)\n    {\n        string\\[\\] words = ligne.Split(':');\n        definitions.Put(words \\[0\\],words \\[1\\]);\n        ligne = monStreamReader.ReadLine();\n    }\n    monStreamReader.Close();\n\n    return new Dictionnaire (definitions);\n}\n",[313],{"type":28,"tag":127,"props":314,"children":315},{"__ignoreMap":7},[316],{"type":33,"value":311},{"type":28,"tag":29,"props":318,"children":319},{},[320],{"type":33,"value":135},{"type":28,"tag":29,"props":322,"children":323},{},[324],{"type":33,"value":325},"Ainsi, un test peut utiliser le constructeur avec un dictionnary par défaut. La lecture du fichier a été délocalisé hors de la classe.",{"type":28,"tag":182,"props":327,"children":329},{"id":328},"attention-à-lencapsulation",[330],{"type":33,"value":331},"Attention à l'encapsulation",{"type":28,"tag":29,"props":333,"children":334},{},[335],{"type":33,"value":336},"La technique ci-dessus a cependant un risque important si on l'applique naivement, celui de briser l'encapsulation.",{"type":28,"tag":29,"props":338,"children":339},{},[340],{"type":33,"value":341},"Exemple :",{"type":28,"tag":29,"props":343,"children":344},{},[345],{"type":33,"value":346},"public class Car\n{\npublic Car (Engine engine);\n...\n}",{"type":28,"tag":29,"props":348,"children":349},{},[350],{"type":33,"value":351},"En exposant les collaborateurs je donne des indications sur la façon dont fonctionne mon objet. Ici ma voiture est une voiture à moteur.",{"type":28,"tag":29,"props":353,"children":354},{},[355],{"type":33,"value":356},"Si au final l'appelant doit instancier tout les objets nécessaires à ma voiture : le moteur, le frein, la boite de vitesse, je brise l'encapsulation et je rends l'utilisation de l'objet très difficile.",{"type":28,"tag":29,"props":358,"children":359},{},[360],{"type":33,"value":361},"D'où l'intérêt de manipuler des interfaces et d'utiliser des Factory.",{"type":28,"tag":53,"props":363,"children":365},{"id":364},"les-instanciations-directes",[366],{"type":33,"value":367},"Les instanciations directes",{"type":28,"tag":105,"props":369,"children":371},{"id":370},"problématique-1",[372],{"type":33,"value":110},{"type":28,"tag":29,"props":374,"children":375},{},[376],{"type":33,"value":377},"Les instanciations (via l'opérateur new) comme dans l'exemple suivant peuvent être gênant pour les tests :",{"type":28,"tag":29,"props":379,"children":380},{},[381],{"type":33,"value":382},"Dictionnaire dico = new Dictionnaire ();\n...",{"type":28,"tag":29,"props":384,"children":385},{},[386,388,392],{"type":33,"value":387},"Ici on créé un couplage fort avec l'implémentation du dictionnaire.",{"type":28,"tag":389,"props":390,"children":391},"br",{},[],{"type":33,"value":393},"\nSi celui-ci établit une connexion à la base de données, le code devient intestable.",{"type":28,"tag":105,"props":395,"children":397},{"id":396},"solution",[398],{"type":33,"value":399},"Solution",{"type":28,"tag":29,"props":401,"children":402},{},[403],{"type":33,"value":404},"Plusieurs approches sont possibles, elles sont toutes basées sur l'utilisation d'une interface qui va définir le contrat du dictionnaire.",{"type":28,"tag":29,"props":406,"children":407},{},[408],{"type":33,"value":409},"public interface IDictionnaire\n{\n...\n}",{"type":28,"tag":29,"props":411,"children":412},{},[413],{"type":33,"value":414},"Le code appelant utilisera désormais l'interface qui ne déclare que son comportement métier.",{"type":28,"tag":29,"props":416,"children":417},{},[418],{"type":33,"value":419},"On pourra ensuite utiliser :",{"type":28,"tag":65,"props":421,"children":422},{},[423,428],{"type":28,"tag":69,"props":424,"children":425},{},[426],{"type":33,"value":427},"une Factory",{"type":28,"tag":69,"props":429,"children":430},{},[431],{"type":33,"value":432},"l'injection de dépendances via un framework spécialisé (Spring.Net, GenericFacade etc...)",{"type":28,"tag":29,"props":434,"children":435},{},[436],{"type":33,"value":437},"// Ici la factory nous permet de rajouter un découplage entre celui qui utilise et l'implémentation.\nIDictionnaire dico = DictionnaireFactory.BuildDictionnaire ();\n...",{"type":28,"tag":29,"props":439,"children":440},{},[441],{"type":33,"value":442},"ou avec Spring.Net",{"type":28,"tag":29,"props":444,"children":445},{},[446],{"type":33,"value":447},"ApplicationContext ctx = ContextRegistry.GetContext();\nIDictionnaire dico= (IDictionnaire ) ctx.GetObject (\"MyDictionnaire\");",{"type":28,"tag":29,"props":449,"children":450},{},[451],{"type":33,"value":452},"L'intérêt des Frameworks, entre autre, par rapport à une factory classique, c'est de pouvoir configurer l'implémentation renvoyé selon le contexte.",{"type":28,"tag":53,"props":454,"children":456},{"id":455},